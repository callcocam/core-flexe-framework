namespace S_App\S_Parent\Filter;


use Flexe\Form\Filters\AbstractFilters;
use Flexe\Validate\Rules\Required;
use Flexe\Validate\Rules\ValidEmail;

class SiteContactsFilter extends AbstractFilters
{


    public function __construct(array $data = [])
    {

        $this->add('name',[

            Required::class=>[
                self::VALUE=>true,
                self::MSG=>'Campo %s e obrigatorio'
            ]
        ]);

        $this->add('email',[

            Required::class=>[
                self::VALUE=>true,
                self::MSG=>'Campo %s e obrigatorio'
            ],
            ValidEmail::class=>[
                self::VALUE=>true,
                self::MSG=>'Digite um email valido'
            ]
        ]);

        $this->add('subject',[

            Required::class=>[
                self::VALUE=>true,
                self::MSG=>'Campo %s e obrigatorio'
            ]
        ]);
        $this->add('description',[

            Required::class=>[
                self::VALUE=>true,
                self::MSG=>'Campo %s e obrigatorio'
            ]
        ]);

    }
}